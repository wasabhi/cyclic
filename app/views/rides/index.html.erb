<h1>Listing rides</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Favourite</th>
    <th>Distance</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rides.each do |ride| %>
  <tr>
    <td><%= ride.name %></td>
    <td><%= ride.favourite %></td>
    <td><%= ride.distance %></td>
    <td><%= ride.date %></td>
    <td><%= link_to 'Show', ride %></td>
    <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
    <td><%= link_to 'Destroy', ride, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

